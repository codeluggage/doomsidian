{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"jest",
			"node"
		]
	},
	"include": [
		"src/**/*",
		"main.ts"
	],
	"exclude": [
		"node_modules"
	]
}